@model AppLabsWebVersion.Models.Level1Numbers.FlooringCalculatorValidation

@{
    ViewBag.Title = "FlooringCalculatorForm";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Flooring Calculator Form</h2>

<p>Let's get some information about the floor you want to get a quote on</p>

@using (Html.BeginForm("FlooringCalculatorForm", "Level1AppLabs", FormMethod.Post, new { role = "form" }))
{
    <!--show the validation results if there are any erros above the form-->
    @Html.ValidationSummary()
    <form role="form">
        <div class="row">
            <label>Length</label>
            <div class="input-group col-sm-4">
                <span class="input-group-addon"></span>
                <!---This whole html helper becomes the text box which is why you create a new html form-control-->
                @Html.TextBoxFor(m => m.Length, new { @class = "form-control", placeholder = "Length" })
            </div>
        </div>
        <br />
        <div class="row">
            <label>Width</label>
            <div class="input-group col-sm-4">
                <span class="input-group-addon"></span>
                <!---This whole html helper becomes the text box which is why you create a new html form-control-->
                @Html.TextBoxFor(m => m.Width, new { @class = "form-control", placeholder = "Width" })

            </div>
        </div>
        <br />
        <div class="row">
            <label>Cost</label>
            <div class="input-group col-sm-4 ">
                <span class="input-group-addon">$</span>
                <!---This whole html helper becomes the text box which is why you create a new html form-control-->
                @Html.TextBoxFor(m => m.Cost, new { @class = "form-control", placeholder = "Cost" })

            </div>
        </div>
        <br/>
        <div class="row">
            <button type="submit" class="btn btn-default" value="Save">Submit</button>
        </div>
    </form>
}