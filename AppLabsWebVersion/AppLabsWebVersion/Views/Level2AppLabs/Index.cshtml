@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section level2
{
    
<link href="~/Content/Level2Customization.css" rel="stylesheet" />
}

<h1 class="text-center text-warning">Level 2 Number Labs</h1>
<br />

<div class="bs-example">
    <div id="carousel-example-captions" class="carousel slide" data-ride="carousel">
        <ol class="carousel-indicators">
            <li data-target="#carousel-example-captions" data-slide-to="0" class="active"></li>
            <li data-target="#carousel-example-captions" data-slide-to="1" class=""></li>
            <li data-target="#carousel-example-captions" data-slide-to="2" class=""></li>
            <li data-target="#carousel-example-captions" data-slide-to="3" class=""></li>
        </ol>
        <div class="carousel-inner">
            <div class="item">
                <img data-src="holder.js/900x500/auto/#777:#777" alt="900x500" src="../../Content/Pictures/slider-background.jpg" />
                <div class="carousel-caption">
                    <div class="jumbotron">
                        <h1>Return Program</> </h1>
                        <p>A program that shows a list of items and their prices. You enter the product you want to choose and how much you want to pay for it. The program will return your change in different denominations</p>
                        <p>@Html.ActionLink("Learm More", "ChangeReturnForm", "Level2AppLabs", new { @class = "btn btn-success btn-lg" })</p>
                    </div>
                </div>

            </div>
            <div class="item">
                <img data-src="holder.js/900x500/auto/#666:#666" alt="900x500" src="../../Content/Pictures/dark-blue-background-backgrounds-wallpapers.jpg" />
                <div class="carousel-caption">
                    <div class="jumbotron">
                        <h1>Fibonacci Sequence</h1>
                        <p>Program calculates the Fibonacci sequence up to the term you input.</p>
                        <p>@Html.ActionLink("Learm More", "FibonacciSequenceForm", "Level2AppLabs", new { @class = "btn btn-success btn-lg" })</p>
                    </div>
                </div>
            </div>
            <div class="item active">
                <img data-src="holder.js/900x500/auto/#555:#5555" alt="900x500" src="../../Content/Pictures/blue_halo-1280x800.jpg" />
                <div class="carousel-caption">
                    <div class="jumbotron">
                        <h1>Next Prime Number</h1>
                        <p>Enter a number and the program will find the next prime number after that value.</p>
                        <p>@Html.ActionLink("Learm More", "PrimeNumberForm", "Level2AppLabs", new { @class = "btn btn-success btn-lg" })</p>
                    </div>
                </div>
            </div>
            <div class="item">
                <img data-src="holder.js/900x500/auto/#444:#4444" alt="900x500" src="../../Content/Pictures/ocean_minimalistic_soft_shading_light_gradient_background_deep_1280x800_58883.jpg" />
                <div class="carousel-caption">
                    <div class="jumbotron">
                        <h1>Unit Converter</h1>
                        <p>
                            Pick a conversion type (temperature, currency, volume, mass, or some other unit type), enter the unt of measure you want to convert from and to
                            convert it to. You will also enter a value you want converted. The program will show you the result.
                        </p>
                        <p>@Html.ActionLink("Learm More", "ConversionCategoryForm", "Level2AppLabs", new { @class = "btn btn-success btn-lg" })</p>
                    </div>
                </div>
            </div>
        </div>
        <a class="left carousel-control" href="#carousel-example-captions" data-slide="prev">
            <span class="glyphicon glyphicon-chevron-left"></span>
        </a>
        <a class="right carousel-control" href="#carousel-example-captions" data-slide="next">
            <span class="glyphicon glyphicon-chevron-right"></span>
        </a>
    </div>
</div>