@model AppLabsWebVersion.Models.Level2Numbers.ChangeReturnValidation

@{
    ViewBag.Title = "ChangeReturnForm";
    Layout = "~/Views/Shared/_Layout.cshtml";


    @section ProgressBar{
        <link href="~/Content/ProgressBar.css" rel="stylesheet" />
    }

        
    
}

<h2>Change Return Form</h2>

@using (Html.BeginForm("ChangeReturnForm", "Level2AppLabs", FormMethod.Post, new { role = "form" }))
{
    @Html.ValidationSummary()
    <div class="row">
        <table style="border-spacing: 15px">
            <tr>
                <td>
                    <div class="btn-group" data-toggle="buttons" style="padding-bottom:10px" id="FirstBtn">
                        <label class="btn btn-warning">
                            @Html.RadioButtonFor(model => model.Product, "Coke", new { name = "Product" }) Coke

                        </label>
                    </div>
                </td>
                <td>
                    <div class="btn-group" data-toggle="buttons" style="padding-bottom:10px" id="FirstBtn">
                        <label class="btn btn-warning">
                            @Html.RadioButtonFor(model => model.Product, "Computer", new { name = "Product" }) Computer

                        </label>
                    </div>
                </td>
                <td>
                    <div class="btn-group" data-toggle="buttons" style="padding-bottom:10px" id="FirstBtn">
                        <label class="btn btn-warning">
                            @Html.RadioButtonFor(model => model.Product, "Toaster", new { name = "Product" }) Toaster

                        </label>
                    </div>
                </td>
            </tr>
            <tr>
                <td>
                    <div class="firstBar ">
                        <div class="progress-bar" role="progressbar" aria-valuenow="100" aria-valuemin="0" aria-valuemax="100" style="width: 100%;">
                            $2.00
                        </div>
                    </div>
                </td>
                <td>
                    <div class="secondBar ">
                        <div class="progress-bar" role="progressbar" aria-valuenow="100" aria-valuemin="0" aria-valuemax="100" style="width: 100%;">
                            $1,232.00
                        </div>
                    </div>
                </td>
                <td>
                    <div class="thirdBar ">
                        <div class="progress-bar" role="progressbar" aria-valuenow="100" aria-valuemin="0" aria-valuemax="100" style="width: 100%;">
                            $15.00
                        </div>
                    </div>
                </td>
            </tr>
        </table>
    </div>
        <br />

        
        
        
       

        
    

 


    <div class="row">
        <label>Cost of item</label>
        <div class="input-group col-sm-2 ">
            <span class="input-group-addon">$</span>
            <!---This whole html helper becomes the text box which is why you create a new html form-control-->
            @Html.TextBoxFor(m => m.Cost, new { @class = "form-control", placeholder = "Cost" })

        </div>
    </div>
    <br />
    <div class="row">
        <label>Amount you pay</label>
        <div class="input-group col-sm-2 ">
            <span class="input-group-addon">$</span>
            <!---This whole html helper becomes the text box which is why you create a new html form-control-->
            @Html.TextBoxFor(m => m.EnteredCash, new { @class = "form-control", placeholder = "Your payment" })

        </div>
    </div>

    <br />
    <div class="row">
        <button type="submit" class="btn btn-default" value="Save">Submit</button>
    </div>
}
